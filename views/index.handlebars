<div class="container">

    <div class="jumbotron">
        <div class="row">
            <div class="col-md-8" id="jumbo-header">
                <h1>Eat-Da-Burger</h1>
            </div>

            <div class="col-md-4">
                <h2>Add a Burger</h2>
                <form class="create-form">

                    <div class="form-group">
                        <label for="ca">Burger Name:</label>
                        <input type="text" id="newburger" name="name">
                    </div>

                    <button type="submit">Add Burger</button>
                </form>
            </div>
        </div>
    </div>

        <div class="col-md-5 to-eat-container">
                <h2>Burgers to Eat:</h2>
            <hr>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <span><strong>{{this.id}} - {{this.burger_name}} </strong></span>
                <button type="button" class="eatburger btn btn-warning" data-id="{{this.id}}"
                    data-newDevoured="{{devour}}"><span>Devour</span></button>
                <hr>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-2">
        </div>

        <div class="col-md-5 devoured-container">
                <h2>Burgers Devoured:</h2>
            <hr>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                <button type="button" class="removeburger btn btn-danger" data-id="{{this.id}}"
                    data-newDevoured="{{devour}}"><span>Trash</span></button>
                <hr>
                {{/if}}
                {{/each}}
            </ul>
        </div>

</div>