<div class="container">

    <div class="jumbotron">
        <h1>Burgers!</h1>
    </div>

    <div class="row">
        <div class="col-md-6">
            <h2>Burgers that have not been devoured!</h2>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <span><strong>{{this.id}} - {{this.burger_name}} </strong></span>
                <button type="button" class="eatburger btn btn-warning" data-id="{{this.id}}"
                    data-newDevoured="{{devour}}"><span>Devour</span></button>
                <hr>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-6">
            <h2>Burgers that were eaten!</h2>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                <button type="button" class="removeburger btn btn-danger" data-id="{{this.id}}"
                    data-newDevoured="{{devour}}"><span>Trash</span></button>
                <hr>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <h2>Add a Burger</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="newburger" name="name">
        </div>

        <button type="submit">Add Burger</button>
    </form>

</div>